<?xml version="1.0" encoding="utf-8"?>

<!-- Табличная разметка элементов по-центру всего экрана -->
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:stretchColumns="*">

    <TableRow>

        <!-- Текстовая надпись размером в 6 ячеек по-центру -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="341dp"
            android:layout_height="84dp"
            android:layout_span="6"
            android:foreground="@drawable/zadanie"
            android:gravity="center|center_vertical"
            android:text="задание" />

    </TableRow>

    <!-- Строка таблицы 1 -->
    <TableRow>

        <!-- Текстовая надпись размером в 6 ячеек по-центру -->
        <TextView
            android:id="@+id/textView"
            android:layout_height="wrap_content"
            android:layout_span="6"
            android:gravity="center|center_vertical"
            android:text="@string/Решение_квадратного_уравнения" />

    </TableRow>

    <!-- Строка таблицы 2 -->
    <TableRow android:layout_width="225dp">

        <!-- Текстовая надпись справа -->
        <TextView
            android:id="@+id/textView2"
            android:gravity="right"
            android:text="А="
            tools:ignore="HardcodedText,RtlHardcoded" />

        <!-- Поле ввода числа со знаком для "a" -->
        <EditText
            android:id="@+id/editText_a"
            android:layout_width="4dp"
            android:importantForAutofill="no"
            android:inputType="number|text"
            tools:ignore="LabelFor" />

        <!-- Текстовая надпись справа -->
        <TextView
            android:id="@+id/textView3"
            android:gravity="right"
            android:text="В="
            tools:ignore="HardcodedText,RtlHardcoded" />

        <!-- Поле ввода числа со знаком для "b" -->
        <EditText
            android:id="@+id/editText_b"
            android:importantForAutofill="no"
            android:inputType="number|text"
            tools:ignore="LabelFor" />

        <!-- Текстовая надпись справа -->
        <TextView
            android:id="@+id/textView4"
            android:gravity="right"
            android:text="X="
            tools:ignore="HardcodedText,RtlHardcoded" />

        <!-- Поле ввода числа со знаком для "c" -->
        <EditText
            android:id="@+id/editText_x"
            android:layout_width="wrap_content"
            android:importantForAutofill="no"
            android:inputType="number|text"
            tools:ignore="LabelFor" />

    </TableRow>

    <!-- Строка таблицы 3 -->
    <TableRow>

        <!-- Кнопка для расчета размером в 6 ячеек -->
        <Button
            android:id="@+id/button"
            android:layout_span="6"
            android:onClick="onCalc"
            android:text="РЕШИТЬ"
            tools:ignore="HardcodedText" />
    </TableRow>

    <!-- Строка таблицы 4 -->
    <TableRow>

        <!-- Текстовая надпись размером в 6 ячеек по-центру -->
        <TextView
            android:id="@+id/textView_y"
            android:layout_height="wrap_content"
            android:layout_span="6"
            android:gravity="center"
            android:text="ОТВЕТ:"
            tools:ignore="HardcodedText" />

    </TableRow>

    <!-- Строка таблицы 5 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</TableLayout>